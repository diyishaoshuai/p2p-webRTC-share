{
  "name": "webrtc-screen-share",
  "version": "1.0.0",
  "description": "P2P高清屏幕共享系统 - 支持1080p@60fps+音频",
  "main": "electron-main.js",
  "packageManager": "pnpm@8.0.0",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "electron": "electron .",
    "build": "electron-builder --win --x64",
    "build:dir": "electron-builder --win --x64 --dir"
  },
  "keywords": [
    "webrtc",
    "screen-share",
    "p2p",
    "1080p",
    "60fps"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.0.1"
  },
  "build": {
    "appId": "com.webrtc.screenshare",
    "productName": "WebRTC屏幕共享",
    "directories": {
      "output": "dist-new"
    },
    "files": [
      "electron-main.js",
      "electron-app.html",
      "electron-client.js",
      "server.js",
      "public/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
